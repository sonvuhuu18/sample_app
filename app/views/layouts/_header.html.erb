<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("navbar.title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("navbar.home"), root_path %></li>
        <li><%= link_to t("navbar.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("navbar.users"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "navbar.account" %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("navbar.profile"), current_user %></li>
              <li><%= link_to t("navbar.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t("navbar.logout"), logout_path, method: :delete%></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("navbar.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
