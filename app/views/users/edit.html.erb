<% provide :title, t("user.edit.title") %>
<% provide :button_text, t("user.edit.submit") %>
<h1><%= t "user.edit.h1" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">
        <%= t "user.edit.change" %>
      </a>
    </div>
  </div>
</div>
