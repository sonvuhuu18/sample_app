<% provide :title, t("pw_reset.title")%>
<h1>
  <%= t "pw_reset.h1" %>
</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.submit t("pw_reset.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
